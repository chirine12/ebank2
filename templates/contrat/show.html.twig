{% extends 'userinterface/index.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contrat.id }}</td>
            </tr>
            <tr>
                <th>Datedeb</th>
                <td>{{ contrat.datedeb ? contrat.datedeb|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ contrat.datefin ? contrat.datefin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                   <td> <img src="{{ asset('uploads/' ~ contrat.signatureFile) }}" alt="Signature" style="width: 100px; height: auto;"></td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ contrat.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contrat_index') }}">back to list</a>

    <a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}">edit</a>

    {{ include('contrat/_delete_form.html.twig') }}
{% endblock %}
