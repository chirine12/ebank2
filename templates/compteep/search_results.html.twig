{% if compteeps is not empty %}
    <table class="table">
        <thead>
            <tr>
                <th>Rib</th>
                <th>Solde</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for compteep in compteeps %}
                <tr>
                    <td>{{ compteep.Rib }}</td>
                    <td>{{ compteep.solde }}</td>
                    <td>{{ compteep.description }}</td>
                    <td>
                        <button onclick="window.location.href='{{ path('app_compteep_show', {'id': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Plus</button>
                        <button onclick="window.location.href='{{ path('app_compteep_edit', {'id': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Modifier</button>
                        <button onclick="window.location.href='{{ path('app_demande_desac_c_e_new', {'compteepId': compteep.id}) }}'" class="btn tp-btn-light btn-primary">Desactiver</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Aucun compte trouv√©.</p>
{% endif %}
